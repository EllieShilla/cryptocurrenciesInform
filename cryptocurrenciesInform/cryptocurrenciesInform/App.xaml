<Application x:Class="cryptocurrenciesInform.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:cryptocurrenciesInform"
             xmlns:vm="clr-namespace:cryptocurrenciesInform.ViewModels"
             xmlns:v="clr-namespace:cryptocurrenciesInform.Views">

    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:HomeVM}">
            <v:Home/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DetailVM}">
            <v:Detail/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConverterVM}">
            <v:Converter/>
        </DataTemplate>
    </Application.Resources>
</Application>
